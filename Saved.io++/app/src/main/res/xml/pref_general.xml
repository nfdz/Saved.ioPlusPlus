<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="@string/pref_sort_label"
        android:key="@string/pref_sort_key"
        android:defaultValue="@string/pref_sort_default"
        android:entryValues="@array/pref_sort_values_key"
        android:entries="@array/pref_sort_values_label" />

    <EditTextPreference
        android:title="@string/pref_api_label"
        android:key="@string/pref_api_key"
        android:defaultValue="@string/pref_api_default"
        android:singleLine="true"
        android:inputType="text" />

</PreferenceScreen>
